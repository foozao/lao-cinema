# Database
DATABASE_URL=postgresql://user:password@localhost:5432/lao_cinema
TEST_DATABASE_URL=postgresql://user:password@localhost:5432/lao_cinema_test

# Server
PORT=3001
HOST=0.0.0.0
LOG_LEVEL=info

# CORS
CORS_ORIGIN=http://localhost:3000

# Videos & Trailers
# Local development: Use local video server (recommended - mimics production)
# Production (GCP): Use Google Cloud Storage bucket base URL
# Note: Video and trailer paths (/videos/hls, /trailers/hls) are constructed automatically

# Video Security
# Secret for signing video access tokens (must match video server)
# Generate with: openssl rand -hex 32
VIDEO_TOKEN_SECRET=dev-secret-change-in-production
# Video server URL for generating signed URLs
VIDEO_SERVER_URL=http://localhost:3002

# JWT (for future auth)
# JWT_SECRET=your_secret_key_here

# Brevo (Sendinblue) Email Service
BREVO_API_KEY=your_brevo_api_key_here
BREVO_SENDER_EMAIL=noreply@mail.laocinema.com
BREVO_SENDER_NAME=Lao Cinema

# Frontend URL (for password reset links)
FRONTEND_URL=http://localhost:3000

# Pre-Alpha Rental Limits
# Maximum total rentals allowed per movie (all users combined)
# Set to 0 to disable this limit
# Default: 50 (configured in api/src/config.ts)
MAX_RENTALS_PER_MOVIE=50

# Sentry Error Monitoring (production only)
# Get DSN from: https://sentry.io/settings/YOUR_ORG/projects/YOUR_PROJECT/keys/
SENTRY_DSN=
