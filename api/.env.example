# Database
DATABASE_URL=postgresql://user:password@localhost:5432/lao_cinema
TEST_DATABASE_URL=postgresql://user:password@localhost:5432/lao_cinema_test

# Server
PORT=3001
HOST=0.0.0.0
LOG_LEVEL=info

# CORS
CORS_ORIGIN=http://localhost:3000

# Videos
# Local development: Use local video server (recommended - mimics production)
VIDEO_BASE_URL=http://localhost:3002/videos/hls
# Alternative: Use Next.js public folder directly
# VIDEO_BASE_URL=http://localhost:3000/videos/hls
# Production (GCP): Use Google Cloud Storage
# VIDEO_BASE_URL=https://storage.googleapis.com/lao-cinema-videos/hls

# Video Security
# Secret for signing video access tokens (must match video server)
# Generate with: openssl rand -hex 32
VIDEO_TOKEN_SECRET=dev-secret-change-in-production
# Video server URL for generating signed URLs
VIDEO_SERVER_URL=http://localhost:3002

# JWT (for future auth)
# JWT_SECRET=your_secret_key_here

# Brevo (Sendinblue) Email Service
BREVO_API_KEY=your_brevo_api_key_here
BREVO_SENDER_EMAIL=noreply@mail.laocinema.com
BREVO_SENDER_NAME=Lao Cinema

# Frontend URL (for password reset links)
FRONTEND_URL=http://localhost:3000
