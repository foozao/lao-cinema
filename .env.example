# Deployment Environment Variables
# Required for: deploy.sh, deploy-staged.sh, sync-db-to-cloud.sh, sync-db-from-cloud.sh
# Scripts auto-load this file from project root. Use 'export' so variables are available.

# Cloud SQL Database Password
# Get this from Google Cloud Console > Cloud SQL > laocinema-preview (or laocinema-staging) > Users
export CLOUD_DB_PASS='your-cloud-sql-password-here'

# Staging database password (if different from preview)
# export CLOUD_DB_PASS_STAGING='your-staging-password-here'

# Sentry Error Monitoring DSNs
# Get these from https://sentry.io/settings/YOUR_ORG/projects/
# Web project DSN (for Next.js frontend)
export SENTRY_WEB_DSN='https://xxx@xxx.ingest.sentry.io/web-project-id'
# API project DSN (for Fastify backend)
export SENTRY_API_DSN='https://yyy@yyy.ingest.sentry.io/api-project-id'
