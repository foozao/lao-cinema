{
  "name": "lao-cinema",
  "version": "0.1.0",
  "description": "Lao Cinema streaming platform monorepo",
  "private": true,
  "scripts": {
    "db:update": "./scripts/db/schema-update.sh",
    "test": "node scripts/run-tests.mjs",
    "test:simple": "npm run test:web && npm run test:api",
    "test:web": "cd web && npm test",
    "test:api": "cd api && npm run test",
    "test:watch": "npm run test:watch:web",
    "test:watch:web": "cd web && npm run test:watch",
    "test:watch:api": "cd api && npm test:watch",
    "test:coverage": "npm run test:coverage:web && npm run test:coverage:api",
    "test:coverage:web": "cd web && npm run test:coverage",
    "test:coverage:api": "cd api && npm run test:coverage"
  },
  "workspaces": [
    "web",
    "api",
    "db",
    "video-server"
  ],
  "dependencies": {
    "postgres": "^3.4.7"
  },
  "devDependencies": {
    "tsx": "^4.19.2"
  }
}
